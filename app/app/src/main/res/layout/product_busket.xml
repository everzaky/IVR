<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/busket_product_name"
        android:layout_width="229dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/busket_product_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/busket_product_name"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/busket_add"
        android:layout_width="14dp"
        android:layout_height="27dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="+"
        android:clickable="true"
        android:focusable="true"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/busket_product_img"
        app:layout_constraintTop_toBottomOf="@+id/busket_price" />

    <TextView
        android:id="@+id/busket_number"
        android:layout_width="39dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="@string/get_started"
        app:layout_constraintStart_toEndOf="@+id/busket_add"
        app:layout_constraintTop_toBottomOf="@+id/busket_product_name" />

    <TextView
        android:id="@+id/busket_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/busket_product_img"
        app:layout_constraintTop_toBottomOf="@+id/busket_product_name" />

    <TextView
        android:id="@+id/busket_sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/busket_price"
        app:layout_constraintTop_toBottomOf="@+id/busket_product_name" />

    <TextView
        android:id="@+id/busket_reduce"
        android:layout_width="13dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:text="-"
        android:textSize="24dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@+id/busket_number"
        app:layout_constraintTop_toBottomOf="@+id/busket_product_name" />

</androidx.constraintlayout.widget.ConstraintLayout>