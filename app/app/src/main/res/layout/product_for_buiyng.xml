<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/buying_check_box"
        android:layout_width="32dp"
        android:layout_height="21dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/buying_image"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <ImageView
        android:id="@+id/buying_image"
        android:layout_width="95dp"
        android:layout_height="106dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buying_product_name"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/buying_product_name"
        android:layout_width="233dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="68dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Количество в магазине"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/buying_image"
        app:layout_constraintTop_toBottomOf="@+id/buying_product_name" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Нужно купить"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/buying_image"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="31dp"
        android:layout_height="18dp"
        android:layout_marginStart="4dp"
        android:text="Цена"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/buying_image"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/buying_product_shop_number"
        android:layout_width="58dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/buying_product_name" />

    <TextView
        android:id="@+id/buying_busket_number"
        android:layout_width="58dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/buying_product_shop_number" />

    <TextView
        android:id="@+id/product_price_buying"
        android:layout_width="46dp"
        android:layout_height="19dp"
        android:layout_marginStart="1dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/product_sale_price_buying"
        android:layout_width="47dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/product_price_buying"
        app:layout_constraintTop_toBottomOf="@+id/buying_busket_number" />
</androidx.constraintlayout.widget.ConstraintLayout>